<Window x:Class="ABoBa.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ABoBa"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Image Width="300" Height="100" Name="imageCapcha" Margin="5" />

            <TextBlock x:Name="tbCapch" Margin="5"></TextBlock>
            
            <Button x:Name="btGo" Click="btGo_Click" Margin="5" Height="20">Войти</Button>
            
            <Button x:Name="btRefresh" Click="btRefresh_Click" Margin="5" Height="20">Обновить капчу</Button>
        </StackPanel>
    </Grid>
</Window>
